@using Microsoft.AspNet.Identity
<div>
    @if (Request.IsAuthenticated)
    {

        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <li class="btn btn-primary" >@Html.ActionLink("Xin Chào " + User.Identity.GetUserName(), "Index", "Home")</li>
            <li><a class="btn btn-primary" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>

        }
    }
    else
    {

        <li class="btn btn-primary"><a href="/Account/Login/">Đăng nhập</a></li>

    }
</div>
<div class="clearfix"> </div>

